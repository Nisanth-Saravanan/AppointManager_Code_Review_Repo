@model AppointmentManager.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient Name:</label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientName"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Doctor Name:</label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorName"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofAppoint" class="control-label">Date of Appointment: (YYYY-MM-DD Format)</label>
                <input asp-for="DateofAppoint" class="form-control" />
                <span asp-validation-for="DateofAppoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeofAppoint" class="control-label">Time of Appointment: (24 Hour Format)</label>
                <input asp-for="TimeofAppoint" class="form-control" />
                <span asp-validation-for="TimeofAppoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusofAppoint" class="control-label">Status of Appointment:</label>
                <select asp-for="StatusofAppoint" class="form-control">
                    <option value="">-- Select Status --</option>
                    <option value="Pending">Pending</option>
                    <option value="Ongoing">Ongoing</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="StatusofAppoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
